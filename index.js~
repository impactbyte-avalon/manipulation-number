//Level 0 Manipulation Number

var A = 4
let B = 10
const C = 90

var Z = `${A} ${B} ${C}`

console.log(Z)

//Level 1 mathematical operators

var A1 = 4+10
var B1 = 10-90
var C1 = 90*5
var D1 = 300/40
var E1 = 500%5

console.log(A1)
console.log(B1)
console.log(C1)
console.log(D1)
console.log(E1)

//Level 2 JavaScript Arithmetic Operators

var A2 = 4+10
var B2 = A2+500
var C2 = 900-15
var D2 = C2-7.5
var E2 = 500*5
var F2 = E2*10
var G2 = 70/7
var H2 = G2/8
var I2 = 60%5
var J2 = I2%3

console.log(B2)
console.log(D2)
console.log(F2)
console.log(H2)
console.log(J2)

//negative number

var A3 = -4+-10
var B3 = A3+-500
var C3 = -900-15
var D3 = C3-7.5
var E3 = -500*5
var F3 = E3*-10
var G3 = -70/-7
var H3 = G3/8
var I3 = -60%5
var J3 = I3%-3

console.log(B3)
console.log(D3)
console.log(F3)
console.log(H3)
console.log(J3)


//Level 3  
// Store different kind of numbers into an array variable

var A4 = ["200","300","400","500","600"]
console.log(A4)

//Combine, push, or pop different kind of data types like a string and boolean to that array variable

A4.pop ()
console.log(A4)


A4.push("900")
console.log(A4)


var A5 = ["200","300","400","500","600"]
var angka = "";
var i;
for (i = 0; i < A5.length; i++) {
    angka += A5[i] + "<br>";
}
console.log(angka)
